<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/chat_item_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <com.myq.atalk.bean.CircleImageView
            android:id="@+id/chat_item_otherIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_head" />

        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
         <TextView 
             android:id="@+id/chat_item_otherName"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="10dp"
             android:textColor="#000000"
             />   
        <TextView
            android:id="@+id/chat_item_otherContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatfrom_bg_normal"
            android:textColor="#000000"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/chat_item_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <com.myq.atalk.bean.CircleImageView
            android:id="@+id/chat_item_myIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/default_head" />

       <TextView 
            android:id="@+id/chat_item_myName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_alignParentTop="true"
           	android:layout_toLeftOf="@+id/chat_item_myIcon"
            android:textSize="10dp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/chat_item_myContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatto_bg_normal"
            android:layout_toLeftOf="@+id/chat_item_myIcon"
            android:layout_below="@+id/chat_item_myName"
            android:textColor="#000000" />

        
    </RelativeLayout>

</RelativeLayout>