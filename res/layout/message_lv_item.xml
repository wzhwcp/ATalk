<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <com.myq.atalk.bean.CircleImageView 
        android:id="@+id/message_item_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_head"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/message_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/message_item_avatar"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="title" />

    <TextView
        android:id="@+id/message_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_alignLeft="@+id/message_item_title"
        android:textSize="16dp"
        android:textColor="#808080"
        android:text="content" />

    <TextView
        android:id="@+id/message_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/message_item_title"
        android:layout_alignBottom="@+id/message_item_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="16dp"
        android:textColor="#808080"
        android:text="time" />

</RelativeLayout>